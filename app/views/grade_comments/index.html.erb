

<h1>Listing Grade Comments</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grade_comments.each do |grade_comment| %>
      <tr>
        <td><%= link_to 'Show', grade_comment %></td>
        <td><%= link_to 'Edit', edit_grade_comment_path(grade_comment) %></td>
        <td><%= link_to 'Destroy', grade_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

