<div class='page-header'>
  <h1><%=@assignment.name%></h1>
  <p><%=@assignment.description.html_safe%></p>
</div>

<%= form_for(@submission) do |f| %>
  <% if @submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
      <% @submission.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% else %>



<%=f.hidden_field :assignment_id, value: @assignment.id%>
<%=f.hidden_field :user_id, value: current_user.id%>
<%=f.hidden_field :name, value: current_user.name %>
<div class="form-group">
  <%= f.label :title,"Titel des Postings", class:'control-label' %>
  <%= f.text_field :title, class:'form-control' %>
</div>
<div class="form-group">
    <%= f.label :audio, 'audio (nur mp3)', class:'control-label' %>
    <div class='row'>
      <div class='col-md-6'>
        <%= f.file_field :audio %>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-6'>
        <%= audio_tag(@submission.audio_url) if @submission.audio? %>
      </div>
    </div>
</div>
<div class="form-group">
    <%= f.label :notecard, "Karteikarte", class:'control-label' %>
      <!--make it into Deutsch-->
      <%= f.cktext_area :notecard, :ckeditor => {:language => 'de'}, maxlength: 2000 %>
</div>

<!-- vocab -->
<div class='form-group'>
<%= f.label :Wortschatz, class:'control-label' %>
<table class='table'>
    <thead>
      <tr>
        <th>deutscher Ausdruck</th>
        <th>englische Ãœbersetzung</th>
      </tr>
    </thead>
    <tbody>
      <% for i in 1..5 %>
      <tr>
        <td><%= f.text_field "vocab_ger_#{i}", :class=>"form-control" %></td>
        <td><%= f.text_field "vocab_english_#{i}", :class=>"form-control" %></td>
      </tr>
      <% end %>
    </tbody>
      
  </table>
  </div>
   
          
  
    

  <div class="form-group">
    <%= f.submit 'Beitrag speichern', :class=>'btn btn-primary'%>
  </div>
<% end %>
<%end%>