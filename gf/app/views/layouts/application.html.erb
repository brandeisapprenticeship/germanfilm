<!DOCTYPE html>
<html>
<head>
  <title>GER 130A</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "German Culture Through Film", assignments_path, class:"navbar-brand" %>
    </div>



    <!-- NAV BAR -->
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
         <li><%= link_to "Home", assignments_path %></li>
             <% if !current_user.admin?%>
                 <li><%= link_to "My Submissions", submissions_path %></li>
                 <li><%= link_to "Class Vocabulary", assignments_path %></li>
                 <!-- change path!: -->
                 <li><%= link_to "My Bookmarks", assignments_path %></li> 
             <%end%>
            <% if current_user.admin? %>
                  <!-- change path!: -->
                  <li><%= link_to "Grade Book", assignments_path %></li> 
           <% end %>
         <%end%>
       
      </ul>

      
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li>
          <%= link_to('Sign Out', destroy_user_session_path, :method => :delete) %>
        </li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<div class="container">
<%= yield %>
</div>

</body>
</html>

