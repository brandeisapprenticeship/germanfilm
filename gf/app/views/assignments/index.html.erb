
<p id="notice"><%= notice %></p>

<!--create assignment button -->
<% if current_user.admin? %>
<div class="btn-group" role="group" aria-label="...">
  <button type="button" class="btn btn-default"><%= link_to 'Create New Assignment', new_assignment_path %> </button>
</div>
<%end%>
<!-- table for assignments -->

  <!-- Table -->
  <table class="table">
    <thead>
    <tr>
      <th>Film Title </th>
      <th>Due Date </th>
      <th> View Submissions</th>
      <th><%if current_user.admin? %> Edit Assignment <%else%> Submit Assignment <%end%></th>
    </tr>
     </thead>

 

  <tbody>
   <% @assignments.each do |assignment| %>
    
      <tr>
        <td> <%= assignment.name %></td>
        <td> <%= assignment.deadline.strftime("%A, %B, %d at %I:%M %p") %></td>
        <td><%= link_to 'Link to Class Submissions', {:controller => "submissions", :action => "index", :assignment_id => assignment.id}%></td>
        <% if current_user.admin? %> 
        <td><%= link_to 'Edit Assignment', edit_assignment_path(assignment) %></td>
        <% else %>
        <!-- doesn't work: -->
        <%if @submission.blank?%>
          <td><%=link_to 'Submit Assignment', new_submission_path%></td>
        <% else %>
          <td><%=link_to 'Edit Submission', edit_submission_path%></td>
        <%end%>
        <%end%>
        <!--<td><%= link_to 'Destroy Assignment', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
       <br>
      </tr>
    <% end %> 
  </tbody>
</table>

<br>




