
<p id="notice"><%= notice %></p>

<!--create assignment button -->
<% if current_user.admin? %>
<div class="btn-group" role="group" aria-label="...">
  <button type="button" class="btn btn-default" style="background-color:#E8D879"><%= link_to 'neue Hausaufgabe erstellen', new_assignment_path, style:"color:#7538CF" %> </button>
</div>
<%end%>
<!-- table for assignments -->

  <!-- Table -->
  <table class="table">
    <thead>
    <tr>
      <th style="color:white">Filmtitel </th>
      <th style="color:white">Abgabetermin </th>
      <th style="color:white"> BeitrÃ¤ge sehen</th>
      <th style="color:white"><%if current_user.admin? %> Edit Assignment <%else%> Hausaufgabe absenden <%end%></th>
    </tr>
     </thead>

 

  <tbody>
   <% @assignments.each do |assignment| %>
    
      <tr>
        <td> <%= assignment.name %></td>
        <td> <%= assignment.deadline.strftime("%A, %B, %d at %I:%M %p") %></td>
        <td ><%= link_to 'Link zu den BeitrÃ¤gen aller Studenten', {:controller => "submissions", :action => "index", :assignment_id => assignment.id}, style:"color:#E8EE79"%></td>
        <% if current_user.admin? %> 
        <td><%= link_to 'Edit Assignment', edit_assignment_path(assignment), style:"color:#E8EE79" %></td>
        <% else %>
        <!-- doesn't work: -->
        <%if Submission.where(assignment_id: assignment.id, user_id: current_user.id).blank?%>
          <td><%=link_to 'Hausaufgabe absenden', {:controller => "submissions", :action => "new", :assignment_id => assignment.id}, style:"color:#E8EE79"%></td>
        <% else %>
          <%@submission = Submission.where(assignment_id: assignment.id, user_id: current_user.id).first%>
          <td><%=link_to 'editieren des Beitrags', edit_submission_path(@submission), style:"color:#E8EE79"%></td>
        <%end%>
        <%end%>
        <!--<td><%= link_to 'Destroy Assignment', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
       <br>
      </tr>
    <% end %> 
  </tbody>
</table>

